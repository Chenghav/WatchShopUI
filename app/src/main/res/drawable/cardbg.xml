<!-- res/drawable/rounded_white_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="#40000000"/> <!-- Semi-transparent black for shadow -->
        </shape>
    </item>
    <!-- White background layer with rounded corners -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="#FFFFFF"/> <!-- White background color -->
        </shape>
    </item>
</layer-list>
